        <Label x:Name="emaillbl" Content="" HorizontalAlignment="Left" Margin="194,130,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.169,0.148" FontSize="14"/>
        <Label x:Name="pnumberlbl" Content="" HorizontalAlignment="Left" Margin="194,161,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.169,0.148" FontSize="14"/>
        <Label x:Name="addresslbl" Content="" HorizontalAlignment="Left" Margin="194,192,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.169,0.148" FontSize="14"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="169,269,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Style="{StaticResource MaterialDesignFloatingActionLightButton}" Background="White" Grid.Column="1" Margin="0,0,0,210" >
            <materialDesign:PackIcon Kind="AccountCircle" Height="50" Width="50"/>
        </Button>
        <Label x:Name="replbl" Content="" HorizontalAlignment="Left" Margin="194,226,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.169,0.148" FontSize="14"/>
    </Grid>
</Window>
