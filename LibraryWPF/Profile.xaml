        <Rectangle Fill="White" HorizontalAlignment="Left" Height="302" Margin="28,12,0,0" VerticalAlignment="Top" Width="353"/>

        <Label Content="Name" HorizontalAlignment="Left" Margin="133,96,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="namelbl" Content="" HorizontalAlignment="Left" Margin="194,99,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.169,0.148" FontSize="14"/>
        <Label Content="E-mail" HorizontalAlignment="Left" Margin="131,127,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Label Content="Phone number" HorizontalAlignment="Left" Margin="75,161,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="119,192,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
